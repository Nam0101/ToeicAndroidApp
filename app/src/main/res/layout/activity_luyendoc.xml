<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/thao1"
    android:layout_height="match_parent"
    tools:context=".Activity.LuyendocActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarLuyenDoc"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Luyện đọc" />

    <TextView
        android:id="@+id/txtCacdemau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Thư viện đề thi"
        android:textColor="@color/red"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="@+id/toolbarLuyenDoc"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/recyclerviewLuyendoc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/txtCacdemau"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>